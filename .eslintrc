{
  "extends": "airbnb",
  "globals": {
    "describe": true,
    "it": true,
    "nodeLogger": true,
    "beforeEach": true,
    "afterEach": true,
    "debug": true
  },
  "rules": {
    "linebreak-style": "off",
    "no-console": "off",
    "consistent-return": "off",
    "import/no-dynamic-require": "off",
    "global-require": "off",
    "no-unused-expressions": [
      "error",
      {
        "allowTernary": true
      }
    ],
    "max-len": [
      "error",
      120,
      {
        "ignoreComments": true,
        "ignoreTrailingComments": true
      }
    ],
    "valid-jsdoc": [
      "error",
      {
        "preferType": {
          "Boolean": "boolean",
          "Number": "number",
          "Object": "object",
          "String": "string",
          "Function": "function",
          "Array": "array",
          "Promise": "Promise"
        },
        "matchDescription": ".+",
        "requireReturn": false,
        "requireReturnDescription": false
      }
    ],
    "require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": false,
          "ClassDeclaration": false,
          "ArrowFunctionExpression": false
        }
      }
    ],
  }
}